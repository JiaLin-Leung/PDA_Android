<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".activity.apps.detail.jcjydetail.JcDetailActivity"
    android:orientation="vertical">
    <include layout="@layout/common_top"></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="检查"
        android:textSize="15sp"
        android:textColor="@color/text_huise"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/jc_content"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:text="此处是检查内容。"
        android:textSize="15sp"
        android:textColor="@color/text_color"
        android:paddingTop="15dp"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="诊断意见"
        android:textSize="15sp"
        android:textColor="@color/text_huise"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/zd_content"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:text="此处是诊断意见内容。"
        android:textSize="15sp"
        android:textColor="@color/text_color"
        android:paddingTop="15dp"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="报告建议"
        android:textSize="15sp"
        android:textColor="@color/text_huise"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/bg_content"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:text="此处是报告建议内容。"
        android:textSize="15sp"
        android:textColor="@color/text_color"
        android:paddingTop="15dp"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"/>
</LinearLayout>