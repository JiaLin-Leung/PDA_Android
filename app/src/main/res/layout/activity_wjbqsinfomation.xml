<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/huise"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">
    <include
        android:id="@+id/common"
        layout="@layout/common_top" />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout_wjbqs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorColor="@color/lanse"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/lanse"
        app:tabTextAppearance="@style/TabLayoutTextSizeStyle"
        app:tabTextColor="#999999"
        ></com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_wjbqs"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>