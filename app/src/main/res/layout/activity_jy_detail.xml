<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.apps.detail.jcjydetail.JyDetailActivity"
    android:orientation="vertical"
    android:background="#f5f5f5">
    <include layout="@layout/common_top"></include>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/sqsj"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="申请时间"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/sq_data"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="2018-05-17 10:42:00"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:layout_marginRight="12dp"/>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_layout"
        android:layout_below="@id/sq_data"></View>
    <TextView
        android:layout_below="@id/line1"
        android:id="@+id/jcsj"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="检测时间"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_alignParentRight="true"
        android:layout_below="@id/line1"
        android:id="@+id/jy_data"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="2018-05-17 10:42:00"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:gravity="center_vertical"/>


    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_layout"
        android:layout_below="@id/jy_data"></View>
    <TextView
        android:layout_below="@id/line2"
        android:id="@+id/bgsj"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="报告时间"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_alignParentRight="true"
        android:layout_below="@id/line2"
        android:id="@+id/bg_data"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="2018-05-17 10:42:00"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        android:gravity="center_vertical"/>
</RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="详情"
        android:textColor="@color/text_huise"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/jy_detail"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/white"
        android:padding="12dp"
        android:text="此处是详情内容。"
        android:textColor="@color/text_color"/>
</LinearLayout>