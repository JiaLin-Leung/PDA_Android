<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/title_back"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/title_back"
            />
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="170dp"
            android:layout_height="match_parent">
            <ImageView
                android:onClick="onClick"
                android:id="@+id/user_name_up"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/user_name_up"
                />
            <TextView
                android:id="@+id/user_info"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center"
                android:text="床号+患者名字"
                android:layout_centerInParent="true"
                android:layout_width="140dp"
                android:layout_height="match_parent" />
            <ImageView
                android:onClick="onClick"
                android:id="@+id/user_name_down"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/user_name_down"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <ImageView
            android:layout_marginRight="12dp"
            android:id="@+id/users_all"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/users"
            />
    </RelativeLayout>
</LinearLayout>
