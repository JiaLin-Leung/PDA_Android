<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_layout">
    <LinearLayout
        android:id="@+id/ln_hsz"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/hsz_name"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="内八病护士站"
            android:textColor="@color/text_color"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:src="@mipmap/down_down" />

    </LinearLayout>
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="230dp" />
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/daiban"
                android:layout_marginRight="8dp"/>
            <TextView
                android:onClick="onClick"
                android:textColor="@color/text_color"
                android:id="@+id/tv_daiban"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="待办"></TextView>

            <TextView
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/red_version"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:text="111"/>
            />
        </LinearLayout>
        <View
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#d1d1d1"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/tixing"
                android:layout_marginRight="8dp"/>
            <TextView
                android:onClick="onClick"
                android:textColor="@color/text_color"
                android:id="@+id/tv_tixing"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="提醒"
                />
            <TextView
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/red_version"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:text="111"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/sv_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/text_color"
                    android:layout_marginLeft="28dp"
                    android:text="我的应用"/>

                <TextView
                    android:id="@+id/all_application"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text_lan"
                    android:layout_marginRight="28dp"
                    android:text="全部应用"/>
            </RelativeLayout>
            <com.pda.pda_android.widget.LineGridView
                android:id="@+id/gv_lanuch_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:listSelector="#f1f1f1"
                android:numColumns="4"
                android:padding="0dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>