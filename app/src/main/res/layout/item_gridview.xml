<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_marginBottom="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <cn.bingoogolapple.badgeview.BGABadgeImageView
            android:id="@+id/iv_gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:badge_bgColor="#ff0000"
            app:badge_dragable="true"
            app:badge_gravity="rightTop"
            app:badge_horizontalMargin="0dp"
            app:badge_verticalMargin="0dp" />

        <TextView
            android:textSize="12dp"
            android:id="@+id/tv_gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="sdadasd"
            android:textColor="@color/black"/>
    </LinearLayout>

</RelativeLayout>